<!doctype html>
<html>
  <head>
    <title>Socket.IO chat</title>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages li { padding: 5px 10px; }
      #messages:nth-child(odd) { background: #eee; }
    </style>
	<script src="/socket.io/socket.io.js"></script>
	<script src="http://code.jquery.com/jquery-1.11.1.js"></script>
	<!--<script src="./javascripts/socket.js">-->
	</script>

	<link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
	<script type="text/javascript" src="/javascripts/app.js"></script>
	<script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  </head>
  <body ng-app="dischat">
  	<ui-view></ui-view>
  <script type="text/ng-template" id="/home.html">
  	<div class="container">
  		<h1>Generate Chat Room</h1>
  		<div ng-click="goChat()" class="btn btn-primary">Start Chat</div>
  	</div>

  </script>
  <script type="text/ng-template" id="/chat.html">
  	<h3 align="center">Messages</h3>
  	<div class="row messages">
    	<div class="col-md-8 col-md-offset-2" ng-repeat="message in messages">
    		<p>{{message.user}}: {{message.msg}}</p>
    	</div>
    </div>
    <form action="">
      <input placeholder="Nickname" id="u" ng-model="user"/>
      <input placeholder="Your Message" id="m" autocomplete="off" ng-model="message"/><button ng-click="sendMessage()">Send</button>
    </form>
  </script>
  </body>
</html>